
<h1>Your Order</h1>

<table class="table table-striped">
	<tr>
		<th>Customer</th>
		<td><%= @order.user_id %></td>
	</tr>

	<tr>
		<th>Status:</th>
		<td><%= @order.status %></td>
	</tr>

	<tr>
		<th>Items:</th>
		<td><%= @order.order_items.count %></td>
	</tr>

	<tr>
		<th>Order Total</th>
	
	</tr>

	<tr>
		<th>Items</th>
		<th>Title</th>
		<th>Quantity</th>
		<th>Unit Price</th>
		<th>Subtotal</th>
	</tr>

	<% @order.order_items.each do |item| %>
	<tr>
		<td></td>
		<td><%= item.product.title %></td>
		<td><%= link_to item.quantity, edit_order_item_path(item) %></td>
		<td><%= print_price item.product.price %></td>
		<td><%= print_price item.subtotal %></td>
		<td><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>

	<% end %>


</table>

<p><%= link_to "Empty Cart", @order, data: {confirm: 'Are you sure'}, method: :delete %></p>


